@model MiniProject008.Models.LanguageLevel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>LanguageLevel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
    </dl>
    @if (Model.Students.Count > 0)
    {
        <p>On this level there are following students</p>
        <ul>
            @foreach(var student in Model.Students)
            {
                <li>@student.Name</li>
            }
        </ul>
    }
    else
    {
        <p>There are no students on this level.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

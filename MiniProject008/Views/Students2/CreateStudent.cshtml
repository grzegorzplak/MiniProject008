@model MiniProject008.Models.Student

@{
    ViewData["Title"] = "Create student";
}

<h1>Create student</h1>
<div class="row">
    <form asp-controller="Students2" asp-action="CreateStudent" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="label-control"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LanguageLevelId" class="label-control"></label><br />
            @foreach (var item in ViewData["LanguageLeves"] as IEnumerable<MiniProject008.Models.LanguageLevel>)
            {
                @if (Model != null)
                {
                    @if (Model.LanguageLevelId == item.Id)
                    {
                        <input type="radio" name="LanguageLevelId" value="@item.Id" checked /> @item.Level<br />
                    }
                    else
                    {
                        <input type="radio" name="LanguageLevelId" value="@item.Id" /> @item.Level<br />
                    }
                }
                else
                {
                    <input type="radio" name="LanguageLevelId" value="@item.Id" /> @item.Level<br />
                }
            }
            <span asp-validation-for="LanguageLevelId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input name="CreateStudent" value="Create student" type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>